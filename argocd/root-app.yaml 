apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: root-app
  namespace: argocd
spec:
  project: default
  destination:
    server: "https://kubernetes.default.svc"
    namespace: default
  sources:
  - repoURL: https://github.com/titov32/iac.git
    targetRevision: argocd
    path: argocd/apps/
    directory:
      recurse: true
      include: '**/app.yaml'

  syncPolicy:
    automated:
      prune: true
      selfHeal: true
